class Data():
	def __init__(self, *ARGS, **KWARGS):
		self.titulo= 'Sin título'
		self.autor= 'Sin autor'
		self.tiempo_inicio = 0


		# lista de  marcas.
		self.lista_marcas= []
	
	# añade una nueva marca a la lista.
	def agregarMarca(self, marca):
		self.lista_marcas.append(marca)

	#ordena las marcas
	def ordenar(self):
		self.lista_marcas.sort(key= lambda marca:self.autor)

	# limpia la lista de marcas.
	def limpiar (self):
		self.lista_marcas.clear()
	
	def getMarcas(self):
		return self.lista_marcas


class Marca():
	def __init__(self, titulo, autor, tiempo_inicio):
		self.titulo = titulo
		self.autor = autor
		self.tiempo_inicio = tiempo_inicio

	def __str__(self):
		return "{titulo} ({autor}) {tiempo_inicio}".format(titulo=self.titulo, autor=self.autor, tiempo_inicio= self.tiempo_inicio)


